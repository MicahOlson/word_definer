<h5>Update the definition of <i><%= @meaning.word.name %></i></h5>

<form action="/words/<%= @meaning.word.id %>/definitions/<%= @meaning.id %>" method="post" class="update">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <input id="definition" class="form-control" name="definition" type="text" value="<%= @meaning.meaning %>" required>
  </div>
  <button type="submit" class="btn btn-dark">Update definition</button>
</form>

<form action="/words/<%= @meaning.word.id %>/definitions/<%= @meaning.id %>" method="post" class="update">
  <input name="_method" type="hidden" value="delete">
  <div class="form-group">
    <button type="submit" class="btn btn-dark">Delete definition</button>
  </div>
</form>

<p><small><a href="/words/<%= @meaning.word.id %>">Back to <i><%= @meaning.word.name %></i></a></small></p>
