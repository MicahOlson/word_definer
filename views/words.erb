<h4 class="words-heading">Words I Know!</h4>
<p class="words-heading"><small><a href="/words/new">Add a new word</a></small></p>

<div id="words">
  <% if @words.any? %>
    <ul>
      <% @words.each do |word| %>
        <li><a href="/words/<%= word.id %>"><%= word.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are currently no words to display.</p>
  <% end %>
</div>
